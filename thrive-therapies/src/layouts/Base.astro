---
import BaseHead from '@/components/BaseHead.astro';
import Footer from '@/components/ui/Footer.astro';
import Header from '@/components/ui/Header.astro';
import Breakpoints from '@/components/utils/breakpoints.astro';
import { isProd } from '@/utils/system/environment';

import type { BaseHeadProps } from '@/components/BaseHead.astro';

export interface BaseProps extends BaseHeadProps {}

const { metadata } = Astro.props as BaseProps;
---

<html lang="en">
  <BaseHead metadata={metadata} />
  <body class="relative flex flex-col min-h-screen min-w-80 bg-white transition-colors">
    <Header />
    <slot />
    <Footer />
    {!isProd && <Breakpoints />}
  </body>
</html>
